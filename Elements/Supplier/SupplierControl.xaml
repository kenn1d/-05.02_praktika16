<UserControl x:Class="praktika16.Elements.Supplier.SupplierControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:praktika16.Elements.Supplier"
             mc:Ignorable="d">
    <Grid Margin="10" Background="White" Width="450" Height="50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Source="/Images/supplier.jpg" Margin="5" Grid.Column="0"/>

        <Label Content="ФИО"
               FontWeight="Bold"
               Margin="5"
               FontSize="7"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Grid.Column="1"/>
        <Label Content="Иванов Иван Иванович"
               Margin="5"
               FontSize="7"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Left"
               FontStyle="Italic"
               Grid.Column="1"/>

        <Label Content="Компания"
               FontWeight="Bold"
               Margin="5"
               FontSize="7"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Grid.Column="2"/>
        <Label Content="«ПАТ» Lcd." 
               Margin="5"
               FontSize="7" 
               VerticalAlignment="Bottom"
               HorizontalAlignment="Left" 
               FontStyle="Italic" 
               Grid.Column="2"/>

        <Label Content="Телефон" 
               FontWeight="Bold"
               Margin="5"
               FontSize="7" 
               VerticalAlignment="Top"
               HorizontalAlignment="Left" 
               Grid.Column="3" 
               Height="19"/>
        <Label Content="+7 (999) 999 99-99"
               Margin="5"
               FontSize="7"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Left"
               FontStyle="Italic" 
               Grid.Column="3"
               Height="19"/>

        <Button Content="Изменить"
                Grid.Column="4"
                Height="19"
                Margin="5"
                VerticalAlignment="Top"
                Background="White"
                BorderBrush="White" 
                Foreground="#FF009CFF"/>
        <Button Content="Удалить"
                Grid.Column="4" 
                Height="19" 
                Margin="5" 
                VerticalAlignment="Bottom"
                Background="White"
                BorderBrush="White" 
                Foreground="Red"/>
    </Grid>
</UserControl>
