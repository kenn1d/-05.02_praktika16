<UserControl x:Class="praktika16.Elements.Leader.LeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:praktika16.Elements.Leader"
             mc:Ignorable="d" >
    <Grid Margin="10" Background="White" Width="500" Height="50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Source="/Images/leader.png" Margin="5" Grid.Column="0" Stretch="Uniform"/>

        <Label Content="ФИО"
           FontWeight="Bold"
           Margin="5"
           FontSize="7"
           VerticalAlignment="Top"
           HorizontalAlignment="Left"
           Grid.Column="1"/>
        <Label Content="Петров Петр Петрович"
           Margin="5"
           FontSize="7"
           VerticalAlignment="Bottom"
           HorizontalAlignment="Left"
           FontStyle="Italic"
           Grid.Column="1"/>

        <Label Content="Телефон" 
           FontWeight="Bold"
           Margin="5"
           FontSize="7" 
           VerticalAlignment="Top"
           HorizontalAlignment="Left" 
           Grid.Column="2" 
           Height="19"/>
        <Label Content="+7 (888) 888 88-88"
           Margin="5"
           FontSize="7"
           VerticalAlignment="Bottom"
           HorizontalAlignment="Left"
           FontStyle="Italic" 
           Grid.Column="2"
           Height="19"/>

        <Button Content="Изменить"
            Grid.Column="3"
            Height="19"
            Margin="5"
            VerticalAlignment="Top"
            Background="White"
            BorderBrush="White" 
            Foreground="#FF009CFF"/>
        <Button Content="Удалить"
            Grid.Column="3" 
            Height="19" 
            Margin="5" 
            VerticalAlignment="Bottom"
            Background="White"
            BorderBrush="White" 
            Foreground="Red"/>
    </Grid>
</UserControl>
