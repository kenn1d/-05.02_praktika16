<UserControl x:Class="praktika16.Elements.Document.DocumentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:praktika16.Elements.Document"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10" Background="White" Width="700" Height="50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Source="/Images/icon-black.png" Margin="5,5,5,5" Grid.Column="0" Stretch="Uniform"/>

        <StackPanel Grid.Column="1" Margin="5,5,5,5">
            <Label Content="Название"
               FontWeight="Bold"
               FontSize="10"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Padding="0,2,0,0"/>
            <Label Content="Договор поставки"
               FontSize="10"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               FontStyle="Italic"
               Padding="0,0,0,2"/>
        </StackPanel>

        <StackPanel Grid.Column="2" Margin="5,5,5,5">
            <Label Content="Содержимое"
               FontWeight="Bold"
               FontSize="10"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Padding="0,2,0,0"/>
            <Label Content="Антифриз, футбольный мяч..."
               FontSize="10"
               HorizontalAlignment="Left"
               FontStyle="Italic"
               Padding="0,0,0,2" Height="54" Width="152"/>
        </StackPanel>

        <StackPanel Grid.Column="3" Margin="5,5,5,5">
            <Label Content="Номер поставки"
               FontWeight="Bold"
               FontSize="10"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Padding="0,2,0,0"/>
            <Label Content="11 111111"
               FontSize="10"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               FontStyle="Italic"
               Padding="0,0,0,2"/>
        </StackPanel>

        <StackPanel Grid.Column="4" Margin="5">
            <Button Content="Изменить"
                Height="19"
                VerticalAlignment="Top"
                Background="White"
                BorderBrush="White" 
                Foreground="#FF009CFF"/>
            <Button Content="Удалить"
                Height="19"
                Background="White"
                BorderBrush="White" 
                Foreground="Red"/>
        </StackPanel>
    </Grid>
</UserControl>
