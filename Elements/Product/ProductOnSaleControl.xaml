<UserControl x:Class="praktika16.Elements.Product.ProductOnSaleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:praktika16.Elements.Product"
             mc:Ignorable="d" >
    <Grid Margin="10" Background="White" Width="700" Height="50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Source="/Images/sale.png" Margin="5" Grid.Column="0" Stretch="Uniform"/>

        <StackPanel Grid.Column="1" Margin="5">
            <Label Content="Название"
               FontWeight="Bold"
               FontSize="10"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Padding="0,2,0,0"/>
            <Label Content="Антифриз"
               FontSize="10"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               FontStyle="Italic"
               Padding="0,0,0,2"/>
        </StackPanel>

        <StackPanel Grid.Column="2" Margin="5">
            <Label Content="Количество"
               FontWeight="Bold"
               FontSize="10"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Padding="0,2,0,0"/>
            <Label Content="5 шт."
               FontSize="10"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               FontStyle="Italic"
               Padding="0,0,0,2"/>
        </StackPanel>

        <StackPanel Grid.Column="3" Margin="5">
            <Label Content="Срок годности"
               FontWeight="Bold"
               FontSize="10"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Padding="0,2,0,0"/>
            <Label Content="15.12.2024"
               FontSize="10"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               FontStyle="Italic"
               Padding="0,0,0,2"/>
        </StackPanel>

        <StackPanel Grid.Column="4" Margin="5">
            <Label Content="Код поставки"
               FontWeight="Bold"
               FontSize="10"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Padding="0,2,0,0"/>
            <Label Content="11 111111"
               FontSize="10"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               FontStyle="Italic"
               Padding="0,0,0,2"/>
        </StackPanel>

        <StackPanel Grid.Column="6" Margin="5">
            <Button Content="Изменить"
                Height="19"
                VerticalAlignment="Top"
                Background="White"
                BorderBrush="White" 
                Foreground="#FF009CFF"/>
            <Button Content="Удалить"
                Height="19" 
                VerticalAlignment="Top"
                Background="White"
                BorderBrush="White" 
                Foreground="Red"/>
        </StackPanel>
    </Grid>
</UserControl>
