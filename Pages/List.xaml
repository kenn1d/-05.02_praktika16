<Page x:Class="praktika16.Pages.List"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:praktika16.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Список">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" 
              Background="White" 
              Margin="10" 
              Height="60"
              VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="80"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Поиск:"
                       FontSize="18"
                       VerticalAlignment="Center"
                       Height="24"/>

            <TextBox Grid.Column="1"
                     TextChanged="search"
                     Name="SearchBox"
                     Background="Transparent"
                     BorderThickness="1"
                     FontSize="14"
                     Foreground="#212121"
                     VerticalAlignment="Center"
                     Padding="5"
                     BorderBrush="#FF64B5F6" Height="30">

                <TextBox.Resources>
                    <Style TargetType="TextBox" x:Key="PlaceholderStyle">
                        <Setter Property="Foreground" Value="#999"/>
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Resources>
            </TextBox>
        </Grid>

        <ScrollViewer Grid.Row="1"
                   Margin="10"
                   Background="White"
                   VerticalScrollBarVisibility="Auto"
                   HorizontalScrollBarVisibility="Disabled">

            <StackPanel x:Name="ItemsContainer"
                   Background="White"/>

            <ScrollViewer.Resources>
                <Style TargetType="ScrollViewer">
                    <Setter Property="VerticalContentAlignment" Value="Top"/>
                </Style>
            </ScrollViewer.Resources>
        </ScrollViewer>

        <Grid Grid.Row="2" 
              Height="70" 
              Background="Transparent"
              Margin="10">

            <Button Content="+ Добавить"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Width="120"
                    Height="40"
                    Padding="0"
                    Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Label FontSize="24"
                   Content="Список поставщиков"
                   Height="40"
                   FontWeight="SemiBold"    
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   Margin="125, 0, 0, 0"/>

            <Button Content="Далее"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Width="120"
                    Height="40"
                    Padding="0"
                    Cursor="Hand" Margin="0, 0, 125, 0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Выйти"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Background="#F44336"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Width="120"
                    Height="40"
                    Padding="0"
                    Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>

        </Grid>
    </Grid>
</Page>
