<Page x:Class="praktika16.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:praktika16.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid Background="White">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="320">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0"
                       Content="Вход в систему"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="#1565C0"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"/>

            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <Label Content="Логин"
                             FontSize="14"
                             Foreground="#1565C0"
                             Margin="0,0,0,5"/>
                <TextBox Name="LoginBox"
                             Background="White"
                             BorderBrush="#64B5F6"
                             BorderThickness="1"
                             Padding="10"
                             FontSize="14"
                             Foreground="#212121"
                             Height="40"
                             VerticalContentAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,30">
                <Label Content="Пароль"
                             FontSize="14"
                             Foreground="#1565C0"
                             Margin="0,0,0,5"/>
                <PasswordBox Name="PasswordBox"
                             Background="White"
                             BorderBrush="#64B5F6"
                             BorderThickness="1"
                             Padding="10"
                             FontSize="14"
                             Height="40"
                             VerticalContentAlignment="Center"/>
            </StackPanel>

            <Button Grid.Row="3"
                        Content="Войти"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Height="45"
                        Padding="0"
                        Cursor="Hand"
                        HorizontalContentAlignment="Center">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Page>
