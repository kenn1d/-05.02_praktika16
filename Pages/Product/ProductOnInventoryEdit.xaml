<Page x:Class="praktika16.Pages.Product.ProductOnInventoryEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:praktika16.Pages.Product"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductOnInventoryEdit">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Добавление/редактирвоание товара на складе"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Foreground="#1565C0"
                   HorizontalAlignment="Center"
                   Margin="0,30,0,20"/>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="0,0,0,10">

            <Grid HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  Width="400"
                  Margin="0,0,0,20">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Название товара"
                               FontSize="14"
                               Foreground="#1565C0"
                               Margin="0,0,0,5"/>
                    <TextBox Name="NameBox"
                             Background="White"
                             BorderBrush="#64B5F6"
                             BorderThickness="1"
                             Padding="10"
                             FontSize="14"
                             Foreground="#212121"
                             Height="40"
                             VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0,0,0,20">
                    <TextBlock Text="Позиция на складе"
                               FontSize="14"
                               Foreground="#1565C0"
                               Margin="0,0,0,5"/>
                    <TextBox Name="PositionBox"
                             Background="White"
                             BorderBrush="#64B5F6"
                             BorderThickness="1"
                             Padding="10"
                             FontSize="14"
                             Foreground="#212121"
                             Height="40"
                             VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <TextBlock Text="Срок годности"
                               FontSize="14"
                               Foreground="#1565C0"
                               Margin="0,0,0,5"/>
                    <DatePicker Name="ExpiryDatePicker"
                                Background="White"
                                BorderBrush="#64B5F6"
                                BorderThickness="1"
                                Padding="5"
                                FontSize="14"
                                Foreground="#212121"
                                Height="40"
                                VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Row="3">
                    <TextBlock Text="Поставка"
                               FontSize="14"
                               Foreground="#1565C0"
                               Margin="0,0,0,5"/>
                    <ComboBox Name="SupplyCodeComboBox"
                              Background="White"
                              BorderBrush="#64B5F6"
                              BorderThickness="1"
                              Padding="10,0,10,0"
                              FontSize="14"
                              Foreground="#212121"
                              Height="40"
                              VerticalContentAlignment="Center">
                        <ComboBoxItem Content="SP-2023-001"/>
                        <ComboBoxItem Content="SP-2023-002"/>
                        <ComboBoxItem Content="SP-2023-003"/>
                        <ComboBoxItem Content="SP-2023-004"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <Grid Grid.Row="2" 
              Height="70" 
              Background="Transparent"
              Margin="10">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom">

                <Button Name="SaveButton"
                        Content="Сохранить"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Width="120"
                        Height="40"
                        Margin="0,0,10,0"
                        Padding="0"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#2196F3"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1976D2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Name="CancelButton"
                        Content="Отмена"
                        Background="#F44336"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Width="120"
                        Height="40"
                        Padding="0"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#F44336"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D32F2F"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
